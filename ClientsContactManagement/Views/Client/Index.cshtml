        #tbllist_filter {
            margin-bottom: 1%;
        }
    </style>
}

<div class="card">
      
    <div class="card-body">
            <a class="btn btn-success" asp-controller="Employee" asp-action="Create">Add New</a>
        <div class="card-title">
